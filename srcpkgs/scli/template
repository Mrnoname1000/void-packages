pre_install() {
	mv "${XBPS_SRCDISTDIR}/${pkgname}-${version}/scli" "${XBPS_SRCDISTDIR}/${pkgname}-${version}/README.md" "${XBPS_SRCDISTDIR}/${pkgname}-${version}/LICENSE" "${wrksrc}"
