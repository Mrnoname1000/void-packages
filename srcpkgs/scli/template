	echo "build: ${XBPS_SRCDISTDIR}/${pkgname}-${version}"
}
do_install() {
	ls "${wrksrc}"
	echo "${wrksrc}"

	vbin "${wrksrc}/scli"
	vdoc "${wrksrc}/README.md"
	vlicense "${wrksrc}/LICENSE"
}
